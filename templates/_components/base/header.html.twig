<div class="container-fluid header--container">
    <nav class="navbar navbar-expand-lg navbar-dark text-center text-lg-left">
        <button class="navbar-toggler m-auto ml-lg-0" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse mr-lg-4" id="navbarText">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item{% if app.request.attributes.get('_route') == 'app_main' %} active{% endif %}">
                    <a class="nav-link" href="{{ path('app_main') }}">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Playlists</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Discover</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Fancy Player</a>
                </li>
            </ul>

            {% if userProvider.loggedIn == true %}
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item{% if app.request.attributes.get('_route') == 'app_profile' %} active{% endif %}">
                        <a class="nav-link" href="{{ path('app_profile', { userId: user.id }) }}">{{ user.name }}</a>
                    </li>
                </ul>
            {% endif %}

            {% if userProvider.loggedIn == false %}
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Sign In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Sign Up</a>
                    </li>
                </ul>
            {% endif %}

        </div>

        {% if userProvider.currentPlayback is not null %}
            <div class="navbar-player d-flex justify-content-center">
                <div class="navbar-player-text">
                    <small class="navbar-player-text--small">Now Playing:</small><br>
                    <span class="navbar-player-text--title text-truncate">{{ userProvider.currentPlayback.item.name }}</span>
                    <small class="navbar-player-text--artist text-truncate">
                        {% for artist in userProvider.currentPlayback.item.artists %}
                            {{ artist.name }}{% if not loop.last %},{% endif %}
                        {% endfor %}
                    </small>
                </div>

                <div class="navbar-player-image">
                    <img class="img-fluid" src="{{ userProvider.currentPlayback.item.album.images[2].url }}">
                </div>
            </div>
        {% endif %}
    </nav>
</div>
