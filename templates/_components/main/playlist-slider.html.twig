<div class="container">
    <div class="row">
        <div class="col-12 col-md-4">
            <div class="playlist-slider-preview">
                {% for item in userProvider.getUsersPlaylists.items %}
                    <div class="playlist-slider-preview--item">
                        <img src="{{ item.images[0].url }}" width="500" height="500" class="img-fluid playlist-slider-preview--item">
                        <div class="playlist-preview-element">
                            <h4 class="playlist-preview-element--heading">{{ item.name }}</h4>
                            <small class="playlist-preview-element--owner">{{ item.owner.display_name }}</small>
                            <a href="#" class="btn btn-block btn-success playlist-preview-element--button">Play on Spotify</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="col-12 col-md-8">
            <div class="playlist-slider-navigation">
                {% for item in userProvider.getUsersPlaylists.items %}
                    <div class="playlist-slider-navigation--item">
                        <img src="{{ item.images[0].url }}" width="200" height="200" class="img-fluid playlist-slider-navigation--item">
                        <div class="playlist-navigation-element">
                            <h4 class="playlist-navigation-element--heading">{{ item.name }}</h4>
                            <small class="playlist-navigation-element--owner">{{ item.owner.display_name }}</small>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>



</div>
