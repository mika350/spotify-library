<div class="container-fluid">
    <div class="playlist-slider">
        {% for item in userProvider.getUsersPlaylists.items %}
            <div class="playlist-slider--item">
                <img src="{{ item.images[0].url }}" width="200" height="200" class="playlist-slider--item">
                <div class="playlist-element">
                    <h4 class="playlist-element--heading">{{ item.name }}</h4>
                    <small class="playlist-element--owner">{{ item.owner.display_name }}</small>
                    <a href="#" class="btn btn-block btn-success playlist-element--button">Play on Spotify</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
