<div class="navbar-player d-flex justify-content-center">
    <div class="navbar-player-text">
        <div class="navbar-player-text--small">
            Now Playing:
            <ul class="animated-bars">
                <li class="animated-bars--item"></li>
                <li class="animated-bars--item"></li>
                <li class="animated-bars--item"></li>
                <li class="animated-bars--item"></li>
            </ul>
        </div>
        <a href="{{ path('app_track_detail', {trackId: playback.item.id }) }}" title="{{ playback.item.name }}" class="navbar-player-text--title text-truncate">{{ playback.item.name }}</a>
        <div class="navbar-player-text--artist text-truncate">
            {% for artist in playback.item.artists %}
                <a href="{{ path('app_artist_detail', { artistId: artist.id }) }}">{{ artist.name }}</a>{% if not loop.last %},{% endif %}
            {% endfor %}
        </div>
    </div>

    <div class="navbar-player-image">
        <img class="img-fluid" src="{{ playback.item.album.images[2].url }}">
    </div>
</div>